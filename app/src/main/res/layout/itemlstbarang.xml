<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:id="@+id/layoutParent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#607e8b"
        android:padding="8dp">

        <TextView
            android:id="@+id/adpTxtharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/adpTxtnamaBarang"
            android:layout_marginEnd="0dp"
            android:textColor="#ff5252"
            android:text="harga" />

        <TextView
            android:id="@+id/adpTxtcodebarcode"
            android:layout_width="wrap_content"
            android:textColor="#40c4ff"
            android:layout_height="wrap_content"
            android:text="code barcode" />

        <TextView
            android:id="@+id/adpTxtnamaBarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:text="nama barang"
            android:textColor="#00c853"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>